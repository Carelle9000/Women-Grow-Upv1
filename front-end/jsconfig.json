{
    "compilerOptions": {
      "target": "ES2020",
      "jsx": "react-jsx",
      "module": "ESNext",
      "moduleResolution": "node",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@/components/*": ["./src/components/*"],
        "@/lib/*": ["./src/lib/*"],
        "@/hooks/*": ["./src/hooks/*"]
      },
      "resolveJsonModule": true,
      "allowJs": true,
      "checkJs": false, // Set to false if you don't want JS type checking
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true, // Can be relaxed if needed
      "skipLibCheck": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  